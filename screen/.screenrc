defc1 off
defutf8 on
defencoding utf8
encoding utf8 utf8

startup_message off
term linux

termcapinfo xterm|xterms|xs ti@:te=\E[2J

defscrollback 10000

hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W}%c %{g}]'

multiuser on
acladd root

termcapinfo xterm* ti@:te@
termcapinfo gnome* ti@:te@

vbell off

